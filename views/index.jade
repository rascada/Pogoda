doctype html
html
  head
    title Pogoda Skałągi
    meta(charset='utf-8')
    link(rel='icon', href='img/cloud.ico', type='image/x-icon')
    link(type='text/css', rel='stylesheet', href='css/style.css')
    meta(name='description', content='Stacja pogodowa - meteo Skałągi w gminie Wołczyn, powiat Kluczborski, woj. opolskie. Aktualna pogoda, aktualizacja co 5min.')
    meta(name='keywords', content='stacja, meteo, pogodowa, pogoda, skałągi, temperatura, wiatr, kluczbork, wołczyn, prognoza, wilgotność, meteorologiczna, szkoła, podstawowa, rcre, opolskie')
  body
    // HEADER----------------------------------
    #headerCont.blockShadow
      header
        #logo(title='Kliknij aby zresetować połączenie')
          #logoSunBox
            ul#logoSun
              li
              li
              li
          h1 Pogoda Skałągi
          #info
            h3
              | Ostatnia aktualiazacja: 
              span#last Łącze..
          img(src='img/all.png', style='position: absolute; left: 26em; top: -3.4em; opacity: .8;', width='420px', height='330px')
      .menu
        #menu-buttons
          a
            button.buttonWykres.buttonWykresActive(onclick='setTab(1);') Pogoda Skałągi
          a
            button.buttonWykres(onclick='setTab(2);') Wykresy
          a
            button.buttonWykres(onclick='setTab(3);') Raporty miesięczne
          a
            button.buttonWykres(onclick='setTab(4);') Mapy
          a
            button.buttonWykres(onclick='setTab(5);') Inne stacje
        #stringi
    #all
      #bottomPanel
        #panel2.panel
          // ----------------------WaterPanel--------------------------------
          #waterPanel.bigPanel
            h1.bigPanelH Opady
            // ---------------------miarka1---------------------------------
            .waterTogether
              .f
                .fluid
                  span#aktopad
                    | 0
                    br
                    | mm/h
                  .waterCont
                    #water12.water
                  #miarka12.miarka1
              p Aktualne
            // miarka2
            .waterTogether
              #f2.f
                .fluid
                  span#opadd
                    | 0
                    br
                    | mm
                  .waterCont
                    #water2.water
                  #miarka2.miarka1
              p 24h
        // ----------------------Temperatura----------------------------------
        #tempPanel.bigPanel
          h1.bigPanelH Temperatura
          h3
            span#tentemp Tendencja
          br
          // --------------temp1----------------
          .termometr
            .tempBody
              .termMeter
                #aTemp.termC
                  #aTempvalM.tempMeter
                    span#atemval ..
              .termMeter2
              #tempMiarka1.tempMiarka
            p Aktualna
          // ---------------temp2---------------
          .termometr
            .tempBody
              .termMeter
                #oTemp.termC
                  #oTempvalM.tempMeter
                    span#otemval ..
              .termMeter2
              #tempMiarka2.tempMiarka
            p Odczuwalna
          // --------------temp3----------------
          .termometr
            .tempBody
              .termMeter
                #srTemp.termC
                  #srTempvalM.tempMeter
                    span#srtemval ..
              .termMeter2
              #tempMiarka3.tempMiarka
            p Średnia
          // coTera----------------------------------
          #trueDew.bigHeader
            h4.bigPanelH
              b Punkt rosy: 
              span#dewDeg 0
        // Wiatr----------------------------------
        #contL(style='border: 0; margin-top: 2em;')
          #windPanel.bigPanel
            h1#windBfw.bigPanelH Wiatr
            // compass1--------------------------------
            .compassCont
              #compass1.compass
                #cm1.compArr
                  span#cmL1.compArrDeg 0
                .licznikKomp
                  #strz1.strz
                  .dot
                  #liczPods1.liczPods
                  span#wSpeed.liczCyf.labelek(onclick='aktwindclick()') Ładuje..
              br
              span#aktDirVal.compassSpan Aktualny
            // compass2--------------------------------
            .compassCont
              #compass2.compass
                #cm2.compArr
                  span#cmL2.compArrDeg 0
                .licznikKomp
                  #strz2.strz
                  .dot
                  #liczPods2.liczPods
                  span#wPSpeed.liczCyf.labelek(onclick='podwindclick()') Ładuje..
              br
              span#domDirVal.compassSpan Dominujący
            br
          br
          // ciśnienie------------------------------------------
          #contL2
            #cisPanel.bigPanel
              h1.bigPanelH Ciśnienie
              #cisnienieCont
                .licznikCont
                  #cisLicznik.licznik
                    #strz3.strz
                    .dot
                    #liczPods3.liczPods
                    span#pressval.liczCyf Ładuje..
            // wilgotność
            #wilPanel.bigPanel
              h1.bigPanelH Wilgotność
              #wilgCont
                .licznikCont
                  .licznik
                    #humPercWater
                    #strz4.strz
                    .dot
                    #liczPods4.liczPods
                    span#wilval.liczCyf Ładuje..
      #panel1
        #allFore
          #prognoza.ramka.bigPanel
            h3 Prognoza - trzydniowa
            #weatherUndergroundCont
              span#weather Ładuje...
              img#foreIcon(name='forecast')
              span#forecast Ładuje...
              a(href='http://www.wunderground.com/personal-weather-station/dashboard?ID=IOPOLSKI10', target='_blank')
                img#wuIcon(src='img/wu.png')
              .arrowContainer
                #RRArrow(style='transform: scale(.7)rotate(180deg);', onclick='jschangefore(true)')
                  .RaportArrow
                #RLArrow.weatherArrowsL(style='transform: scale(.7);', onclick='jschangefore(false)')
                  .RaportArrow
          #fore36Cont.ramka.bigPanel
            h3 Prognoza - 36 godzinna
            .fore36Heading
              .arrowContainer
                #RRArrow(style='transform: scale(.7)rotate(180deg);', onclick='refhourly(2)')
                  .RaportArrow
                #RLArrow.weatherArrowsL(style='transform: scale(.7);', onclick='refhourly(1)')
                  .RaportArrow
              span#bigforetime
              span#bigforedate
              img#bigforeimg(name='bigforeimg')
            .fore36Data
              span#bigforetext.fore36Text
              span.fore36Text
                | Temp: 
                span#bigforetemp
              span.fore36Text
                | Pkt. rosy: 
                span#bigforedew
              span.fore36Text
                | Wiatr: 
                span#bigforewdir
                span#bigforewspd
              span.fore36Text
                | Deszcz: 
                span#bigforerain
              span.fore36Text
                | Śnieg: 
                span#bigforesnow
        .flexPanel1
          #raportDniaRamka.ramka.bigPanel
            .arrowContainer
              #RRArrow(onclick='jschangeday(true)')
                .RaportArrow
              #RLArrow(onclick='jschangeday(false)')
                .RaportArrow
            h3
              | Raport dnia - 
              span#daydate Ładuje...
            #raportDnia
              #raportDniaA
                .minMaxBG.grey
                  .minMax
                    b Słońce 
                  .minMax
                    b Brzask: 
                    span#sunBrz 0:00
                    br
                    b Wschód: 
                    span#sunWsch 0:00
                    br
                    b Zachód: 
                    span#sunZch 0:00
                    br
                    b Zmierzch: 
                    span#sunZm 0:00
                    br
                .grey
                  b Długość dnia
                  |  - 
                  span#dayLen 0:00
                .minMaxBG.grey
                  .minMax
                    b Księżyc 
                  .minMax
                    b Wschód: 
                    span#moonWsch 0:00
                    br
                    b Zachód: 
                    span#moonZch 0:00
                    br
                .minMaxBG.grey
                  .minMax
                    b Faza księżyca
                    br
                    span#moonPhase Sprawdzanie
                  .minMax
                    #moonDiv
              #raportDniaA
                .grey
                  b Wiatr
                  br
                  b Podmuch
                  |  -
                  span#windDayBlow  0 m/s
                  br
                  b Dominujący kierunek
                  |  - 
                  span#windDayDom  
                  br
                .grey
                  b Suma Opadów (mm)
                  |  -
                  span#rainDay 0 mm
                  br
                .minMaxBG.grey
                  .minMax
                    b Temperatura 
                  .minMax
                    b max:
                    span#tempDayMax 0
                    br
                    b min:
                    span#tempDayMin 0
                    br
                .minMaxBG.grey
                  .minMax
                    b Wilgotność 
                  .minMax
                    b max:
                    span#wilDayMax 0%
                    br
                    b min:
                    span#wilDayMin 0%
                    br
                .minMaxBG.grey
                  .minMax
                    b Ciśnienie 
                  .minMax
                    b max:
                    span#cisDayMax 0 hPa
                    br
                    b min: 
                    span#cisDayMin 0 hPa
                    br
        .flexPanel1.minPanel3Order
          #minPanel3
            #buttonWykresCont.ramka.bigPanel
              img(src='http://pogoda-skalagi.pl/img/sat.gif')
            .ramka.bigPanel(style='width:235px;')
              h3#biomet
                | Biomet - 
                span#biometOdczyt Ładuje..
      // all
    #wykresy
      #chart1
      .chartMenu(style='margin-bottom: .7em')
        button.chartButton
          .specs2
            p Miesiąc
            p Ostatnie 10 dni
            p Ostatnie 8h
            p Następne 36h
          .monthSpecs
            .pora1
              p(onclick='mon_display=1; judgeMonth();') Styczeń
              p(onclick='mon_display=2; judgeMonth();') Luty
              p(onclick='mon_display=3; judgeMonth();') Marzec
            .pora2
              p(onclick='mon_display=4; judgeMonth();') Kwiecień
              p(onclick='mon_display=5; judgeMonth();') Maj
              p(onclick='mon_display=6; judgeMonth();') Czerwiec
            .pora3
              p(onclick='mon_display=7; judgeMonth();') Lipiec
              p(onclick='mon_display=8; judgeMonth();') Sierpień
              p(onclick='mon_display=9; judgeMonth();') Wrzesień
            .pora4
              p(onclick='mon_display=10; judgeMonth();') Październik
              p(onclick='mon_display=11; judgeMonth();') Listopad
              p(onclick='mon_display=12; judgeMonth();') Grudzień
          .specs8h
            span(style='color: black;') Ostatnie 8h
            p(onclick="setDailyTemp('chart1')") Temperatura
            p(onclick="setDailyOther('chart1')") Wilgotność, ciśnienie, opady
            p(onclick="setDailyWind('chart1', true)") Wiatr uśredniony
            p(onclick="setDailyWind('chart1', false)") Wiatr dokładny
          .specs36h
            span(style='color: black;') Następne 36h
            p(onclick="setForeTemp('chart1')") Temperatura
            p(onclick="setForeWind('chart1')") Wiatr
            p(onclick="setForePreci('chart1')") Opady
          .weekSpecs
            span(style='color: black;') Ostatnie 10 dni
            p(onclick="setSevenTemp('chart1')") Temperatura
            p(onclick="setSevenOther('chart1')") Wilgotność, ciśnienie, opady
            p(onclick="setSevenWind('chart1', true)") Wiatr uśredniony
            p(onclick="setSevenWind('chart1', false)") Wiatr dokładny
          .monthSpecsMonth
            p(onclick="setMonthlyTemp('chart1')") Temperatura min/max
            p(onclick="setMonthlyHum('chart1')") Wilgotność Min/Max
            p(onclick="setMonthlyPress('chart1')") Ciśnienie Min/Max
            p(onclick="setMonthlyWind('chart1')") Wiatr
            p(onclick="setMonthlyRain('chart1')") Sumy opadów
          .menuBack
    #mapki
      span#mapCont
        .but(onclick='setMap(0)') Temperatura
        .but(onclick='setMap(1)') Odczucie gorąca
        .but(onclick='setMap(2)') Odczucie chłodu
        .but(onclick='setMap(3)') Punkt rosy
        .but(onclick='setMap(4)') Wilgotność
        .but(onclick='setMap(5)') Widzialność
        .but(onclick='setMap(6)') Wiatr
      span#mapImageCont
        img(src='http://icons.wxug.com/data/640x480/2xi_pl_st.gif', width='100%', height='100%', name='obrazmapy')
